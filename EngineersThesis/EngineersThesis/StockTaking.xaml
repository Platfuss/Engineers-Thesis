<Window x:Class="EngineersThesis.StockTaking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngineersThesis"
        mc:Ignorable="d"
        Title="Inwentaryzacja" Height="500" Width="750" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="5,5,5,5">
        <Grid x:Name="manageStockTakingsGrid" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="18*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Nowy remanent" Margin="10,0,0,0" Width="100" HorizontalAlignment="Left" Click="OnAddNewStockTaking"/>

            <Canvas Background="Gray" Grid.Row="1" Margin="10, 5, 10, 10">
                <DataGrid x:Name="dataGrid" Background="Gray" MinColumnWidth="80" Visibility="Hidden" CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeRows="False" CanUserResizeColumns="False" CanUserDeleteRows="False" AlternatingRowBackground="#FFCBCBCB" HorizontalAlignment="Left" SelectionMode="Single" SelectionChanged="OnSelectionChanged" AutoGeneratedColumns="OnDataGridColumnsGenerated"/>
            </Canvas>

            <Button x:Name="ShowStockTakingDetailsButton" Content="Pokaż remanent" Grid.Row="2" MinWidth="100" Margin="10,0,0,0" HorizontalAlignment="Left" IsEnabled="False" Click="OnShowStockTakingDetailsButtonClick"/>
            <Button Content="Zakończ" Grid.Row="2" MinWidth="100" Margin="0,0,10,0" HorizontalAlignment="Right" Click="OnExitButtonClick"/>
        </Grid>

        <Grid x:Name="newStockTakingGrid" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="17*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Data inwentaryzacji" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,0,10"/>
            <DatePicker x:Name="newStockTakingDatePicker" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,0,10,0" Width="385" SelectedDateChanged="OnNewStockTakingSelectedDateChanged" />

            <Canvas Background="Gray" Grid.Row="1" Margin="10, 5, 10, 10">
                <DataGrid x:Name="stockTakingDataGrid" MinColumnWidth="100" Background="Gray" Visibility="Hidden" CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeRows="False" CanUserResizeColumns="False" CanUserDeleteRows="False" AlternatingRowBackground="#FFCBCBCB" HorizontalAlignment="Left" SelectionMode="Single" SelectionChanged="OnNewStackTakingSelectionChanged" AutoGeneratedColumns="OnNewStackTakingDataGridColumnsGenerated"/>
            </Canvas>

            <Button Content="Zapisz" Grid.Row="2" Margin="10,0,0,0" HorizontalAlignment="Left" Width="70" Click="OnSaveStockTakingClick" />
            <Button Content="Wróć" Grid.Row="2" Margin="0,0,10,0" HorizontalAlignment="Right" Width="70" Click="OnBackButtonClick" />

        </Grid>
    </Grid>
</Window>
